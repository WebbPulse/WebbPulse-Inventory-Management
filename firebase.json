{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "source": "hosting",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "frameworksBackend": { "region": "us-central1" }
  },
  "emulators": {
    "auth": { "port": 9099 },
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "hosting": { "port": 5000 },
    "ui": { "enabled": true },
    "singleProjectMode": true
  },
  "flutter": {
    "platforms": {
      "android": {
        "default": {
          "projectId": "webbpulse-inventory-management",
          "appId": "1:1096617861007:android:e2ec1a741fb648169a75fa",
          "fileOutput": "android/app/google-services.json"
        }
      },
      "ios": {
        "default": {
          "projectId": "webbpulse-inventory-management",
          "appId": "1:1096617861007:ios:50c7a1ceaf0158b69a75fa",
          "uploadDebugSymbols": false,
          "fileOutput": "ios/Runner/GoogleService-Info.plist"
        }
      },
      "dart": {
        "lib/firebase_options.dart": {
          "projectId": "webbpulse-inventory-management",
          "configurations": {
            "android": "1:1096617861007:android:e2ec1a741fb648169a75fa",
            "ios": "1:1096617861007:ios:50c7a1ceaf0158b69a75fa",
            "web": "1:1096617861007:web:5d45f0a0d485927b9a75fa"
          }
        }
      }
    }
  }
}
